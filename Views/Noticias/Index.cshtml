@model Noticias
@{
    ViewData["Title"] = "Noticias";
}


<form action="@Url.Action("Cadastrar")" method="post" enctype="multipart/form-data">

    <label for="IdNoticia">IdNoticia</label>
    <input type="text" name="IdNoticia" id="IdNoticia">
    
    <label for="Titulo">Titulo</label>
    <input type="text" name="Titulo" id="Titulo">
    
    <label for="Texto">Texto</label>
    <input type="text" name="Texto" id="Texto">

    <label for="Imagem">Imagem</label>
    <input type="file" name="Imagem" id="Imagem">   

    <button type="submit">Cadastrar</button>

</form>
<table class="table table-responsive table-striped">
    <thead>
        <th>Id</th>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Imagem</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach (Noticias n in ViewBag.Noticias)
        {
            <tr>
                <td>@n.IdNoticia</td>
                <td>@n.Titulo</td>
                <td>@n.Texto</td>
                <td>
                    <img src="img/Noticias/@n.Imagem" alt="Imagem da Notícia @n.Titulo">
                </td>
                <td>
                    <a asp-controller="Noticias" asp-action="Excluir" asp-route-id="@n.IdNoticia">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>